<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="/css2/images/img-01.png" alt="IMG">
				</div>

				<form action="/hall/<%= service._id %>/<%= service.owner[0] %>/edit?_method=PUT" method="POST" class="login100-form validate-form">
					<span class="login100-form-title">
            Update Service Information
					</span>
                    <label >Name :</label>
					<div class="wrap-input100 validate-input" data-validate = "Must Be Filled">
						<input class="input100" type="text" name="name" placeholder="Name" value="<%= service.name %>">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="glyphicon glyphicon-user" aria-hidden="true"></i>
						</span>
                    </div>
                    <label >Email :</label>
                    <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" type="email" name="username" placeholder="Email" value="<%= service.email %>">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>
						</span>
					</div>
                    <label >Location :</label>
                    <div class="wrap-input100 validate-input" data-validate = "Must Be Filled">
						<input class="input100" type="text" name="location" placeholder="Location" value="<%= service.location %>">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
						</span>
                    </div>
                    <label >Address :</label>
                    <div class="wrap-input100 validate-input" data-validate = "Must Be Filled">
                        <input class="input100" type="text" name="Address" placeholder="Address" value="<%= service.Address %>">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
                        </span>
                    </div>
                    <label >Cost :</label>
                    <div class="wrap-input100 validate-input" data-validate = "Must Be Filled">
                        <input class="input100" type="text" name="cost" placeholder="Cost : (per day in Rupees)" value="<%= service.cost %>">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
                        </span>
                    </div>
                    <label >Capacity :</label>
                    <div class="wrap-input100 validate-input" data-validate = "Must Be Filled">
                        <input class="input100" type="text" name="capacity" placeholder="Capacity" value="<%= service.capacity %>">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
                        </span>
                    </div>
                    <label >Description :</label>
                    <div class="wrap-input100 validate-input" data-validate = "Must Be Filled">
                        <input class="input100" type="text" name="Desc" placeholder="Description" value="<%= service.Desc %>">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
                        </span>
                    </div>
                    <label >Events : ( Types of Events and services hall supports in comma seperated) :</label>
                    <div class="wrap-input100 validate-input" data-validate = "Must Be Filled">
                        <input class="input100" type="text" name="Events" placeholder="Events" value="<%= service.Events %>">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
                        </span>
                    </div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Submit
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	
